{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": "src/",
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["es6", "es7", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "plugins": [{ "name": "tslint-language-service" }],
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
